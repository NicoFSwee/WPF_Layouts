<Window x:Class="WPF_Layouts.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts"
        mc:Ignorable="d"
        Title="DockWindow" Height="300" Width="300">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Top 1"></Button>
        <Button DockPanel.Dock="Bottom" Content="Bottom 1"></Button>
        <Button DockPanel.Dock="Bottom" Content="Bottom 2"></Button>
        <Button DockPanel.Dock="Left" Content="Left"></Button>
        <Button DockPanel.Dock="Right" Content="Right 1"></Button>
        <Button DockPanel.Dock="Top" Content="Top 2"></Button>
        <Button DockPanel.Dock="Right" Content="Right 2"></Button>
        <Button Content="Center"></Button>
    </DockPanel>
</Window>
