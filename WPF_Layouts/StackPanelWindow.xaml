<Window x:Class="WPF_Layouts.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="150" Width="350">
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="5,0,90,0">
            <TextBlock Text="Feld 1" Margin="0,3,0,0"></TextBlock>
            <TextBlock Text="Feld 2" Margin="0,3,0,0"></TextBlock>
            <TextBlock Text="Feld 3" Margin="0,3,0,0"></TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBox Width="40" Height="20" Text="1"></TextBox>
            <TextBox Width="40" Height="20" Text="2"></TextBox>
            <TextBox Width="40" Height="20" Text="3"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
